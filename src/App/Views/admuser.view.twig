
{% extends 'base.twig' %}

{% block head %}
    <script src="/assets/js/admusuarios.js" defer></script>
{% endblock %}

{% block content %}
<main class="admform-container">
    <h1>Gestión de Usuarios</h1>

    <!-- Filtro de Usuarios -->
    <div class="filtrador">
        <input type="text" class="filtro" placeholder="Filtrar por nombre">
        <button onclick="filtrarUsuarios()">Filtrar</button>
    </div>
    <!-- Tabla de Usuarios -->
    <table class="tabla-usuarios" data-cant-users="{{ cantUsers }}">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <ul class="paginator lista-horizontal">
        <li class="button" data-page="prev">&lt;</li>
        <!-- Contenedor para los números de página -->
        <ul class="page-numbers lista-horizontal"></ul>
        <li class="button" data-page="next">&gt;</li>
    </ul>

    <!-- Formulario para Agregar/Editar Usuario -->
    <form class="login-form" action="register" method="post">
        <label for="email">Email:</label>
        <input type="text" class="email-input" name="email" required>
        
        <label for="rol">Rol:</label>
        <select class="rol-select capitalize" name="rol_id" required>
            {% for role in roles %}
            <option value="{{ role.id }}">{{ role.nombre }}</option>
            {% endfor %}
        </select>
        
        {% if status %}
            <p class="login-error">{{ status }}</p>
        {% else %}
            <p class="login-error"></p>
        {% endif %}
        
        <button class="btn-registrar" type="button">Registrar Usuario</button>
    </form>
  </main>

{% endblock %}