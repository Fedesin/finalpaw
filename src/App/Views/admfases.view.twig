
{% extends 'base.twig' %}

{% block head %}
    <script src="/assets/js/admfases.js" defer></script>
{% endblock %}

{% block content %}

  <main class="admfases-container">
    <h1>Gestión de Fases</h1>
    
    <div class="contenedor_lista_tipo_producto">
      <label for="tipoprod">Tipo de producto:</label>
          <select id="tipo_producto_id" name="tipoprod_id" required>
              <option value="" disabled selected>Seleccione una opción</option>
              {% for tipo_producto in tipo_productos %}
                <option value="{{ tipo_producto.id }}">{{ tipo_producto.nombre }}</option>
              {% endfor %}
          </select>
      </form>
    </div>

    <div class="contenedor_agregar_fases">
      <input id="fase-nombre" class="hidden" type="text" placeholder="Pasteurización">
      <button class="btn-agregar-fase hidden" type="submit">Agregar Fases</button>
    </div>
      
      <table class="tabla-fases hidden"  >
          <thead>
                <tr>
                    <th>Fases</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
      </table>
  </main>

{% endblock %}