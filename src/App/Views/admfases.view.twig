
{% extends 'base.twig' %}


{% block content %}

  <main class="admfases-container">
    <h1>Gestión de Fases</h1>
    <!-- Tenemos que crear el enumerado -->
   

    <!-- Formulario para Agregar/Editar Usuario -->
    <form id="formularioUsuario" onsubmit="guardarUsuario(event)">
        <select id="tipo_fase" required>
            <option value="inicial">Inicial</option>
            <option value="pasteurizacion">Pasteurización</option>
            <option value="prep_del_fermento">Preparación del fermento</option>
            <option value="mad_en_tina">Maduración en tina</option>
            <option value="coagulacion">Coagulacion</option>
            <option value="mol_prensado">Moldeo-prensado</option>
            <option value="salado">Salado</option>
            <option value="envasado">Envasado</option>
            <option value="maduracion">Maduracion</option>
            <option value="stock">Stock</option>
            <option value="limpieza">Limpieza</option>
            <option value="observaciones">Observaciones</option>
        </select>
        <label for="fecha">Fecha:</label>
        <input type="date" id="fecha" required>
        <label for="nro">Producción N°:</label>
        <input type="number" id="nro" required>

        <button type="submit">Guardar</button>
    </form>
  </main>

{% endblock %}