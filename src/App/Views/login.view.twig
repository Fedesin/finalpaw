{% extends 'base.twig' %}


{% block head %}
    <script
    type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js">
    </script>
    <script type="text/javascript">
    (function () {
        emailjs.init({
        publicKey: "{{emailjskey}}",
        });
    })();
    </script>
   
    <script src="https://www.google.com/recaptcha/api.js?render"></script>
    <script src="/assets/js/login.js" defer></script>
{% endblock %}

{% block hamburgerMenu %}
{% endblock %} 

{% block navbar %}
{% endblock %}

{% block content %}

<main class="login-container" itemscope itemtype="http://schema.org/WebPage">
    <form class="login-form" action="login" method="post" itemscope itemtype="http://schema.org/FormAction">
        <h2 itemprop="name">Inicio de sesión</h2>

        <label for="username" itemprop="object.name">Usuario:</label>
        <input type="text" id="username" name="username" value="{{ email }}" placeholder="pepe@gmail.com" title="Ingrese su correo" required>

        <label for="password" itemprop="object.password">Contraseña:</label>
        <input type="password" id="password" name="password" title="Ingrese su contraseña" required>
        
        <button class="g-recaptcha" type="submit" itemprop="potentialAction"
                data-sitekey={{ sitekey }} 
                data-callback='onSubmit'
                data-badge="bottomleft"
                data-action='submit'>Acceder</button>
        <output class="login-error" itemprop="result">{% if status %}{{ status }}{% endif %}</output>

        <a href="#" class="forgot-password-link" itemprop="url">Olvidé mi contraseña</a>
    </form>
</main>


{% endblock %}